{
  "openapi": "3.0.0",
  "info": {
    "title": "幼稚園児向けタイマー API",
    "version": "1.0.0",
    "description": "3分間タイマーの機能を提供するAPI"
  },
  "paths": {
    "/timer/start": {
      "post": {
        "summary": "タイマーを開始",
        "responses": {
          "200": {
            "description": "タイマー開始成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TimerState"
                }
              }
            }
          }
        }
      }
    },
    "/timer/stop": {
      "post": {
        "summary": "タイマーを停止",
        "responses": {
          "200": {
            "description": "タイマー停止成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TimerState"
                }
              }
            }
          }
        }
      }
    },
    "/timer/reset": {
      "post": {
        "summary": "タイマーをリセット",
        "responses": {
          "200": {
            "description": "タイマーリセット成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TimerState"
                }
              }
            }
          }
        }
      }
    },
    "/timer/state": {
      "get": {
        "summary": "タイマー状態を取得",
        "responses": {
          "200": {
            "description": "タイマー状態",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TimerState"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TimerState": {
        "type": "object",
        "properties": {
          "duration": {
            "type": "number",
            "description": "タイマー時間（秒）",
            "example": 180
          },
          "remainingTime": {
            "type": "number",
            "description": "残り時間（秒）",
            "example": 120
          },
          "isRunning": {
            "type": "boolean",
            "description": "動作状態",
            "example": true
          },
          "currentMinute": {
            "type": "number",
            "description": "現在の分（0-2）",
            "example": 1
          },
          "blockSections": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BlockSection"
            }
          }
        },
        "required": ["duration", "remainingTime", "isRunning", "currentMinute", "blockSections"]
      },
      "BlockSection": {
        "type": "object",
        "properties": {
          "minute": {
            "type": "number",
            "description": "分（0-2）",
            "example": 0
          },
          "color": {
            "type": "string",
            "description": "色コード",
            "example": "#4CAF50"
          },
          "isActive": {
            "type": "boolean",
            "description": "アクティブ状態",
            "example": true
          },
          "blocks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Block"
            }
          }
        },
        "required": ["minute", "color", "isActive", "blocks"]
      },
      "Block": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ブロックID",
            "example": "block-0-0"
          },
          "minute": {
            "type": "number",
            "description": "所属する分",
            "example": 0
          },
          "index": {
            "type": "number",
            "description": "分内での位置",
            "example": 0
          },
          "isVisible": {
            "type": "boolean",
            "description": "表示状態",
            "example": true
          },
          "color": {
            "type": "string",
            "description": "色コード",
            "example": "#4CAF50"
          }
        },
        "required": ["id", "minute", "index", "isVisible", "color"]
      }
    }
  }
}
